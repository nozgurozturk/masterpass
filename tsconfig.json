{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@nozgurozturk/masterpass": ["src/index.ts"],
      "@nozgurozturk/masterpass/es/*": ["src/*"]
    },
    "outDir": "./lib/",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "module": "ES6",
    "allowJs": true,
    "target": "es6",
    "lib": ["es2017", "es6", "dom"],
  },
  "exclude": [
    "public",
    "docs",
    "node_modules",
    "src/examples",
    "webpack.config.js"],
  "typedocOptions": {
    "mode": "file",
    "out": "docs",
    "exclude": ["lib", "public", "docs", "node_modules", "src/helpers/Encrypt.js", "src/examples"]
  }
}
